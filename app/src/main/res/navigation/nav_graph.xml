<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/daftarCatatanFragment">

    <fragment
        android:id="@+id/daftarCatatanFragment"
        android:name="com.example.miniprojectmap1.DaftarCatatanFragment"
        android:label="Daftar Catatan"
        tools:layout="@layout/fragment_daftar_catatan">
        <action
            android:id="@+id/action_daftarCatatanFragment_to_detailCatatanFragment"
            app:destination="@id/detailCatatanFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailCatatanFragment"
        android:name="com.example.miniprojectmap1.DetailCatatanFragment"
        android:label="Detail Catatan"
        tools:layout="@layout/fragment_detail_catatan">

        <!-- Tambahkan argumen isiCatatan untuk Safe Args -->
        <argument
            android:name="isiCatatan"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
</navigation>
